{
    "name": "sendlayer/sendlayer-php",
    "description": "Official PHP SDK for SendLayer API",
    "version": "1.0.0",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "sendlayer",
        "email",
        "api",
        "sdk",
        "php",
        "send email",
        "send email api",
        "send email sdk",
        "send email php",
        "sendlayer sdk",
        "sendlayer api",
        "sendlayer php",
        "sendlayer api php"
    ],
    "authors": [
        {
            "name": "SendLayer",
            "email": "support@sendlayer.com",
            "homepage": "https://developers.sendlayer.com"
        },
        {
            "name": "Jared Atchison",
            "homepage": "https://github.com/jaredatch"
        },
        {
            "name": "Gregor Capuder",
            "homepage": "https://github.com/capuderg"
        },
        {
            "name": "Ignazio Setti",
            "homepage": "https://github.com/sixFingers"
        },
        {
            "name": "David Ozokoye",
            "homepage": "https://github.com/gyrationtechs"
        }
    ],
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0",
        "php-coveralls/php-coveralls": "^2.0",
        "vlucas/phpdotenv": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "SendLayer\\": "src/SendLayer/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SendLayer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests",
        "cs": "phpcs src tests",
        "cs:fix": "phpcbf src tests",
        "build": "composer install --no-dev --optimize-autoloader"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 